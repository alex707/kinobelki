<div class="col-xs-12 col-sm-7 col-md-7">

<p id="notice"><%= notice %></p>

<div class="field">
  <h3><%= @project.project_name %></h3>
</div>

<div class="field">
  <%= image_tag @project.project_avatar(:large), { :class => "img-responsive" } %>
</div>

<div class="field">
  <%= @project.project_description %>
</div>

<div class="field">
  <%= form_for(@project) do |f| %>
    <% if @project.errors.any? %>
    <h2><%= pluralize(@project.errors.count, "error") %></h2>

      <ul><% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %></ul>
    <% end %>

    <div class="field">
      <%= f.label :fields_with_reviews %>
      <%= form_for(:reviews) do |r| %>
        <%= r.text_field :review_pos %>
        <%= r.submit %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="field">
  <ul>
    <li><%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-default' %></li>
    <li><%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></li>
    <li><%= link_to 'Main', projects_path, class: 'btn btn-default' %></li>
  </ul>
</div>

</div>
